name: CI

on:
  pull_request:
  push:
    branches:
      - main
    tags:
      - v*

concurrency:
  group: {% raw %}${{ github.ref }}{% endraw %}
  cancel-in-progress: true

env:
  GO_VERSION: "1.19"

jobs:
  test:
    name: Test
    runs-on: {% raw %}${{ matrix.os }}{% endraw %}
    strategy:
      matrix:
        os:
          - ubuntu-latest
          - macos-latest
          - windows-latest

    steps:
      - name: Set up Go {% raw %}${{ env.GO_VERSION }}{% endraw %}
        uses: actions/setup-go@v3
        with:
          go-version: {% raw %}${{ env.GO_VERSION }}{% endraw %}

      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Download Dependencies
        run: go mod download

      - name: Run Tests
        run: go test -race ./...

  lint:
    name: Lint
    runs-on: ubuntu-latest

    steps:
      - name: Set up Go {% raw %}${{ env.GO_VERSION }}{% endraw %}
        uses: actions/setup-go@v3
        with:
          go-version: {% raw %}${{ env.GO_VERSION }}{% endraw %}

      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Run Linting
        uses: golangci/golangci-lint-action@v3
        with:
          version: latest

  release:
    name: Release
    runs-on: ubuntu-latest
    permissions:
      contents: write

    needs:
      - test
      - lint

    if: github.event_name == 'push' && contains(github.ref, 'refs/tags/')

    steps:
      - name: Create GitHub Release
        uses: softprops/action-gh-release@v1
        env:
          GITHUB_TOKEN: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}
          GITHUB_REPOSITORY: {% raw %}${{ github.repository }}{% endraw %}
        with:
          draft: false
          prerelease: false

