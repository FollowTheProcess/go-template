package cmd

import (
	"os"

	"github.com/{{github_username}}/{{project_slug}}/cli/app"
	"github.com/MakeNowJust/heredoc/v2"
	"github.com/spf13/cobra"
)

var (
	version   = "dev" // {{project_slug}} version, set at compile time by ldflags
	commit    = ""    // {{project_slug}} version's commit hash, set at compile time by ldflags
	buildDate = ""    // {{project_slug}} build date, set at compile time by ldflags
	builtBy   = ""    // {{project_slug}} built by, set at compile time by ldflags
)

// BuildRootCmd builds and returns the root {{project_slug}} CLI command.
func BuildRootCmd() *cobra.Command {
	// Note: options must be a pointer so flags are propegated to the App struct
	options := &app.Options{}
	{{project_slug}} := &app.App{
		Out:     os.Stdout,
		Options: options,
	}

	rootCmd := &cobra.Command{
		Use:           "{{project_slug}} [arguments]...",
		Version:       version,
		Args:          cobra.ArbitraryArgs,
		SilenceUsage:  true,
		SilenceErrors: true,
		Short:         "{{description}}",
		Long: heredoc.Doc(`
		
		{{description}}

		`),
		Example: heredoc.Doc(`

		# Some examples of your CLI
		$ {{project_slug}} --help
		`),
		RunE: func(cmd *cobra.Command, args []string) error {
			return {{project_slug}}.Run(args)
		},
	}

	// Attach the flags
	flags := rootCmd.Flags()
	flags.BoolVar(&options.Switch, "switch", false, "Some boolean switch")

	// Set our custom version and usage templates
	rootCmd.SetUsageTemplate(usageTemplate)
	rootCmd.SetVersionTemplate(versionTemplate)

	return rootCmd
}
